@rendermode InteractiveServer
@using Microsoft.AspNetCore.Components
@using Microsoft.AspNetCore.Components.Web
@using Microsoft.JSInterop
@using P1F_TecnoPartes.Services
@inject IJSRuntime JS
@inject CartService CartService
@implements IDisposable

<header class="bg-dark text-white">
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand d-flex align-items-center" href="/">
                <i class="bi bi-pc-display me-2"></i>
                <span class="fw-bold">TecnoPartes</span>
            </a>
            
            <div class="d-flex align-items-center">
                <div class="position-relative me-3 cart-dropdown d-lg-none">
                    <a href="#" class="text-white text-decoration-none cart-icon" id="cartIconMobile" onclick="toggleCart(event)">
                        <i class="bi bi-cart3 fs-4"></i>
                        <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                            @CartService.TotalItems
                        </span>
                    </a>
                    <div class="cart-dropdown-menu" id="cartDropdownMobile">
                        <div class="cart-dropdown-header">
                            <i class="bi bi-cart3 me-2"></i>
                            <span>Carrito de compras (Total: $@CartService.TotalPrice.ToString("F2"))</span>
                        </div>
                        <div class="cart-dropdown-body">
                            @if (CartService.Items.Count == 0)
                            {
                                <div class="empty-cart text-center">
                                    <i class="bi bi-cart-x mb-3"></i>
                                    <p class="mb-2">No hay productos en el carrito.</p>
                                    <small class="text-muted">Agrega algunos productos para continuar</small>
                                </div>
                            }
                            else
                            {
                                <div class="cart-items">
                                    @foreach (var item in CartService.Items)
                                    {
                                        <div class="cart-item d-flex align-items-center mb-3">
                                            <img src="@item.Image" alt="@item.Name" class="cart-item-image me-3" />
                                            <div class="cart-item-details flex-grow-1">
                                                <h6 class="mb-1 cart-item-name">@item.Name</h6>
                                                <div class="cart-item-price">@item.Quantity x $@item.Price.ToString("F2")</div>
                                            </div>
                                            <div class="cart-item-actions">
                                                <button class="btn btn-sm btn-outline-danger" @onclick="() => RemoveFromCart(item.Id)">
                                                    <i class="bi bi-trash"></i>
                                                </button>
                                            </div>
                                        </div>
                                    }
                                </div>
                            }
                        </div>
                        <div class="cart-dropdown-footer">
                            @if (CartService.Items.Count > 0)
                            {
                                <button class="btn btn-success btn-sm w-100 mb-2">
                                    <i class="bi bi-credit-card me-2"></i>
                                    Proceder al pago
                                </button>
                                <button class="btn btn-outline-danger btn-sm w-100" @onclick="ClearCart">
                                    <i class="bi bi-trash me-2"></i>
                                    Vaciar carrito
                                </button>
                            }
                            else
                            {
                                <button class="btn btn-primary btn-sm w-100" onclick="goToProducts()">
                                    <i class="bi bi-shop me-2"></i>
                                    Ver productos
                                </button>
                            }
                        </div>
                    </div>
                </div>

                <button class="navbar-toggler d-lg-none" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
            </div>

            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="#" onclick="scrollToTop(event)">Inicio</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#" onclick="scrollToSection('productos', event)">Productos</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#" onclick="scrollToSection('categorias', event)">Categorías</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#" onclick="scrollToSection('ofertas', event)">Ofertas</a>
                    </li>
                    <li class="nav-item d-lg-none">
                        <a class="nav-link nav-login-mobile" href="/sign-in">
                            <i class="bi bi-person me-2"></i>
                            Iniciar Sesión
                        </a>
                    </li>
                </ul>
                <div class="d-none d-lg-flex align-items-center">
                    <div class="position-relative me-4 cart-dropdown">
                        <a href="#" class="text-white text-decoration-none cart-icon" id="cartIcon">
                            <i class="bi bi-cart3 fs-4"></i>
                            <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                                @CartService.TotalItems
                            </span>
                        </a>
                        <div class="cart-dropdown-menu" id="cartDropdown">
                            <div class="cart-dropdown-header">
                                <i class="bi bi-cart3 me-2"></i>
                                <span>Carrito de compras (Total: $@CartService.TotalPrice.ToString("F2"))</span>
                            </div>
                            <div class="cart-dropdown-body">
                                @if (CartService.Items.Count == 0)
                                {
                                    <div class="empty-cart text-center">
                                        <i class="bi bi-cart-x mb-3"></i>
                                        <p class="mb-2">No hay productos en el carrito.</p>
                                        <small class="text-muted">Agrega algunos productos para continuar</small>
                                    </div>
                                }
                                else
                                {
                                    <div class="cart-items">
                                        @foreach (var item in CartService.Items)
                                        {
                                            <div class="cart-item d-flex align-items-center mb-3">
                                                <img src="@item.Image" alt="@item.Name" class="cart-item-image me-3" />
                                                <div class="cart-item-details flex-grow-1">
                                                    <h6 class="mb-1 cart-item-name">@item.Name</h6>
                                                    <div class="cart-item-price">@item.Quantity x $@item.Price.ToString("F2")</div>
                                                </div>
                                                <div class="cart-item-actions">
                                                    <button class="btn btn-sm btn-outline-danger" @onclick="() => RemoveFromCart(item.Id)">
                                                        <i class="bi bi-trash"></i>
                                                    </button>
                                                </div>
                                            </div>
                                        }
                                    </div>
                                }
                            </div>
                            <div class="cart-dropdown-footer">
                                @if (CartService.Items.Count > 0)
                                {
                                    <a href="/checkout" class="btn btn-success btn-sm w-100 mb-2">
                                        <i class="bi bi-credit-card me-2"></i>
                                        Proceder al pago
                                    </a>
                                    <button class="btn btn-outline-danger btn-sm w-100" @onclick="ClearCart">
                                        <i class="bi bi-trash me-2"></i>
                                        Vaciar carrito
                                    </button>
                                }
                                else
                                {
                                    <button class="btn btn-primary btn-sm w-100" onclick="goToProducts()">
                                        <i class="bi bi-shop me-2"></i>
                                        Ver productos
                                    </button>
                                }
                            </div>
                        </div>
                    </div>
                    
                    <a href="/sign-in" class="btn btn-outline-light ms-2">
                        <i class="bi bi-person me-2"></i>
                        Iniciar Sesión
                    </a>
                </div>
            </div>
        </div>
    </nav>
</header>

<script src="/js/cart.js"></script>
<script src="/js/navigation.js"></script>

@code {
    protected override void OnInitialized()
    {
        CartService.PropertyChanged += OnCartChanged;
    }

    private void OnCartChanged(object? sender, System.ComponentModel.PropertyChangedEventArgs e)
    {
        InvokeAsync(StateHasChanged);
    }

    private void RemoveFromCart(int productId)
    {
        CartService.RemoveItem(productId);
    }

    private void ClearCart()
    {
        CartService.ClearCart();
    }

    public void Dispose()
    {
        CartService.PropertyChanged -= OnCartChanged;
    }
} 