@page "/forgot-password"
@using Microsoft.AspNetCore.Components.Forms
@using System.ComponentModel.DataAnnotations
@inject NavigationManager NavigationManager

<PageTitle>Recuperar Contraseña - TecnoPartes</PageTitle>

<HeadContent>
    <link href="./css/forgot-password.css" rel="stylesheet" />
</HeadContent>

<div class="forgot-password-container">
    <div class="forgot-password-card">
        <div class="forgot-password-header">
            <h1 class="forgot-password-title">¿Olvidaste tu contraseña?</h1>
            <p class="forgot-password-subtitle">No te preocupes, te ayudamos a recuperar el acceso a tu cuenta</p>
        </div>

        @if (emailSent)
        {
            <div class="success-message">
                <div class="success-icon">
                    <i class="bi bi-check-circle-fill"></i>
                </div>
                <h3 class="success-title">¡Correo enviado!</h3>
                <p class="success-text">
                    Hemos enviado las instrucciones de recuperación a <strong>@model.Email</strong>
                </p>
                <p class="success-hint">
                    Revisa tu bandeja de entrada y la carpeta de spam. El correo puede tardar unos minutos en llegar.
                </p>
                <div class="success-actions">
                    <button class="resend-btn" @onclick="ResendEmail" disabled="@isLoading">
                        @if (isLoading)
                        {
                            <span class="spinner-border spinner-border-sm me-2" role="status"></span>
                        }
                        else
                        {
                            <i class="bi bi-arrow-clockwise me-2"></i>
                        }
                        Reenviar correo
                    </button>
                    <a href="/sign-in" class="back-link">
                        <i class="bi bi-arrow-left me-2"></i>
                        Volver al inicio de sesión
                    </a>
                </div>
            </div>
        }
        else
        {
            <EditForm Model="@model" OnValidSubmit="HandleValidSubmit" class="forgot-password-form">
                <DataAnnotationsValidator />
                
                <div class="form-group">
                    <label for="email" class="form-label">Correo Electrónico</label>
                    <div class="input-container">
                        <div class="input-icon">
                            <i class="bi bi-envelope"></i>
                        </div>
                        <InputText id="email" @bind-Value="model.Email" class="form-input" placeholder="correo@ejemplo.com" autocomplete="email" />
                    </div>
                    <div class="input-hint">Ingresa el correo asociado a tu cuenta de TecnoPartes</div>
                    <ValidationMessage For="@(() => model.Email)" class="validation-message" />
                </div>

                <div class="form-actions">
                    <button type="submit" class="recovery-btn" disabled="@isLoading">
                        @if (isLoading)
                        {
                            <span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>
                            <span class="recovery-btn-text">Enviando...</span>
                        }
                        else
                        {
                            <i class="bi bi-send me-2"></i>
                            <span class="recovery-btn-text">Enviar Instrucciones</span>
                        }
                    </button>
                </div>
            </EditForm>
        }

        <div class="forgot-password-footer">
            <p class="back-prompt">
                <span class="back-text">¿Recordaste tu contraseña?</span>
                <a href="/sign-in" class="signin-link">Inicia sesión aquí</a>
            </p>
            <p class="signup-prompt">
                <span class="signup-text">¿No tienes una cuenta?</span>
                <a href="/sign-up" class="signup-link">Regístrate gratis</a>
            </p>
        </div>
    </div>
</div>

@code {
    private ForgotPasswordModel model = new();
    private bool isLoading = false;
    private bool emailSent = false;

    private async Task HandleValidSubmit()
    {
        isLoading = true;
        StateHasChanged();
        
        try
        {
            await Task.Delay(2000);
            
            emailSent = true;
        }
        catch (Exception)
        {
            isLoading = false;
            StateHasChanged();
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }

    private async Task ResendEmail()
    {
        isLoading = true;
        StateHasChanged();
        
        try
        {
            await Task.Delay(1500);
        }
        catch (Exception)
        {
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }

    public class ForgotPasswordModel
    {
        [Required(ErrorMessage = "El correo electrónico es requerido")]
        [EmailAddress(ErrorMessage = "Ingresa un correo electrónico válido")]
        public string Email { get; set; } = string.Empty;
    }
} 